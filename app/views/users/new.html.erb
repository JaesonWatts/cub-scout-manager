<h1>Signup Form</h1>




<div>
  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, required: true %>
    
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>

    <%= f.label :password %>
    <%= f.password_field :password, required: true %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    
    <%= f.submit "Sign Up" %>
  <% end %>
</div>